@{
}

@model List<StudentPortal.web.Models.Entities.Student>
<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Class</th>

            <th></th>



</tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
         <tr>
             <td>@student.Id</td>
             <td>@student.Name</td>
             <td>@student.Email</td>
             <td>@student.Class</td>
             
             <td>
                 <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
             </td>
         </tr>   
        }
    </tbody>
</table>